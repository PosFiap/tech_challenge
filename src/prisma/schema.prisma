// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_HOST")
}

model Cliente {
  cpf    String   @id @unique
  email  String
  nome   String
  Pedido Pedido[]
}

model Produto {
  codigo           Int             @id @default(autoincrement())
  nome             String          @unique
  descricao        String
  valor            Float
  categoria_codigo Int
  ProdutoPedido    ProdutoPedido[]
}

model Pedido {
  codigo        Int             @id @default(autoincrement())
  status        Int             @default(0)
  cpf_cliente   String?
  data_criacao DateTime @default(now())
  data_atualizacao DateTime @updatedAt @default(now())
  Cliente       Cliente?        @relation(fields: [cpf_cliente], references: [cpf])
  ProdutoPedido ProdutoPedido[]
  Fatura Fatura[]

}

model Categoria {
  codigo Int    @id @default(autoincrement())
  nome   String
}

model ProdutoPedido {
  codigo         Int     @id @default(autoincrement())
  observacoes    String?
  produto_codigo Int     
  pedido_codigo  Int     
  valor_produto  Float
  Produto        Produto @relation(fields: [produto_codigo], references: [codigo])
  Pedido         Pedido  @relation(fields: [pedido_codigo], references: [codigo])
}

model Fatura {
    codigo String @id
    data_criacao DateTime @default(now())
    data_atualizacao DateTime @updatedAt
    situacao Int
    pedido_codigo  Int     
    Pedido         Pedido  @relation(fields: [pedido_codigo], references: [codigo])
}